<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="io.github.mobi_led.socialights.JoinGameFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:minWidth="300dp"
        android:minHeight="400dp"
        android:weightSum="100"
        android:background="#DEDEDC">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:text="Quiz with"
            android:id="@+id/txtBattle"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#368DEB"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:padding="10dp"
            android:orientation="vertical"
            >

            <include
                android:id="@+id/list_users_id"
                layout="@layout/list_users"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_margin="0dp" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/btnJoinGame"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="15sp"
            android:background="@drawable/btnblueteam"
            android:text="Join"

            android:layout_weight="15"
            android:layout_margin="10dp" />
    </LinearLayout>

</FrameLayout>
