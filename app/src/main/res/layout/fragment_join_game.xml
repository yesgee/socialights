<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="io.github.mobi_led.socialights.JoinGameFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:minWidth="300dp"
        android:minHeight="400dp"
        android:weightSum="100"
        android:background="#DEDEDC">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:text="Quiz with"
            android:id="@+id/txtBattle"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#368DEB"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:padding="10dp"
            android:orientation="vertical"
            >

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="60"
                android:id="@android:id/list"
                >

            </ListView>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:text=""
                android:id="@android:id/empty"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#368DEB"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="25dp"
                />

            <Button
                android:layout_width="match_parent"
                android:textColor="#ffffff"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/btnJoinGame"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="15sp"
                android:background="@drawable/btnblueteam"
                android:text="Join"

                />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
