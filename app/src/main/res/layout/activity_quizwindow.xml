<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity" >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:clickable="true"
        android:background="@drawable/background2">
        <TextView
            android:id="@+id/scoretext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quiz"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20pt"
            android:textColor="#ffe8e7ff"
            android:fontFamily="monospace"
            android:background="@mipmap/apptheme_textfield_activated_holo_light"
            android:backgroundTint="#b86e9a53" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1) Sample question fetched from server"
            android:id="@+id/textView"
            android:background="#b86e9a53"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04" ></RadioGroup>


        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            android:textStyle="bold|italic"
            android:textSize="10pt"
            android:textColor="#b86e9a53"
            android:buttonTint="#ff53ff95"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="71dp"></RadioButton>


        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            android:textSize="10pt"
            android:textColor="#b86e9a53"
            android:textStyle="bold|italic"

            android:buttonTint="#ff53ff95"
            android:layout_marginTop="63dp"
            android:layout_below="@+id/radio1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            android:textStyle="bold|italic"
            android:textColor="#b86e9a53"
            android:textSize="10pt"
            android:buttonTint="#ff53ff95"
            android:layout_below="@+id/radio2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="63dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Score :"
            android:id="@+id/textView7"
            android:textColor="#ffff0018"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:layout_below="@+id/scoretext"
            android:layout_toRightOf="@+id/button1"
            android:layout_toEndOf="@+id/button1" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_next"
            android:background="#b86e9a53"
            android:textColor="#FFFFFF"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="scoreCard"></Button>


    </RelativeLayout>

</RelativeLayout>