<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list>
            <!-- Right & Top -->
            <item android:right="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="4dp"/>
                    <solid android:color="#06D6D6"/>
                </shape>
            </item>

            <!-- Left & Bottom -->
            <item android:bottom="2dp" android:left="2dp">
                <shape>
                    <gradient android:angle="270" android:endColor="#ff7f7f" android:startColor="#ff7f7f"/>
                    <stroke android:width="1dp" android:color="#BABABA"/>
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- Right & Top -->
            <item android:right="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="2dp"/>
                    <solid android:color="#06D6D6"/>
                </shape>
            </item>

            <!-- Left & Bottom -->
            <item android:bottom="2dp" android:left="4dp">
                <shape>
                    <gradient android:angle="270" android:endColor="#ff4c4c" android:startColor="#ff4c4c"/>
                    <stroke android:width="1dp" android:color="#BABABA"/>
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
        </layer-list>
    </item>


</selector>